{
  "$schema": "http://json-schema.org/schema",
  "$id": "ngx-env-ng-add",
  "title": "ngx-env schematic",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "preBuild": {
      "type": "boolean",
      "description": "Replace files before build",
      "default": false
    },
    "ciOnly": {
      "type": "boolean",
      "description": "Overwrite source file. Run only on CI",
      "default": true
    }
  },
  "required": ["project"]
}
